<mvc:View
controllerName="logaligroup.employees.controller.ListTypes"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
>
	<Shell id="idListShell">
		<App id="idApp">
			<pages>
				<Page id="idListPage" title="{i18n>listTitle}">
					<content>
						<IconTabBar id="idIconTabBar">
							<items>
								<!-- OBJECT LIST ITEM -->
								<IconTabFilter id="idObjectListIconTabFilter" text="{i18n>objectList}">
									<List id="idProductsObjList" items="{/Products}">
										<items>
											<ObjectListItem id="idPriceObjectListItem"
												title="{Material} {Brand} {Model}"
												number="{Price}"
												numberUnit="{Currency}"
												type="Detail"
											>
												<ObjectAttribute id="idBrandObjectAttribute" text="{Brand}"/>
												<ObjectAttribute id="idWeightObjectAttribute" text="{Weight}"/>
											</ObjectListItem>
										</items>
									</List>
								</IconTabFilter>

								<!-- STANDARD LIST -->
								<IconTabFilter id="idStandardListIconTabFilter" text="{i18n>standardList}">
									<List id="idProductsStdList" items="{/Products}">
										<items>
											<StandardListItem id="idStandardListItem"
												title="{Material} {Brand} {Model}"
												description="{Weight}"
												info="{Price} {Currency}"
												type="Active"
											/>
										</items>
									</List>
								
								</IconTabFilter>

								<IconTabFilter id="idInputListIconTabFilter" text="{i18n>inputList}"/>
								<IconTabFilter id="idNotificationListIconTabFilter"  text="{i18n>notificationList}"/>
								<IconTabFilter id="idCustomListIconTabFilter"  text="{i18n>customList}"/>
							</items>
						</IconTabBar>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>

</mvc:View>