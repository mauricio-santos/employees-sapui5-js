<mvc:View
controllerName="logaligroup.employees.controller.ListTypes"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	displayBlock="true"
>
	<Shell id="idListShell">
		<App id="idApp">
			<pages>
				<Page id="idListPage" title="{i18n>listTitle}">
					<content>
						<IconTabBar id="idIconTabBar">
							<items>
								<!-- OBJECT LIST ITEM -->
								<IconTabFilter id="idObjectListIconTabFilter" text="{i18n>objectList}">
									<List id="idProductsObjList"
										items="{
											path: '/Products',
											filters: [{
												path: 'Brand',
												operator: 'EQ',
												value1: 'Compaq'
											}]
										}"
									>
										<items>
											<ObjectListItem id="idPriceObjectListItem"
												title="{Material} {Brand} {Model}"
												number="{Price}"
												numberUnit="{Currency}"
												type="Detail"
											>
												<ObjectAttribute id="idBrandObjectAttribute" text="{Brand}"/>
												<ObjectAttribute id="idWeightObjectAttribute" text="{Weight}"/>
											</ObjectListItem>
										</items>
									</List>
								</IconTabFilter>

								<!-- STANDARD LIST -->
								<IconTabFilter id="idStandardListIconTabFilter" text="{i18n>standardList}">
									<List id="idProductsStdList" 
										items="{
											path: '/Products',
											sorter: {
												path: 'Brand',
												descending: false,
												group: true
											}
										}"
										
									>
										<items>
											<StandardListItem id="idStandardListItem"
												title="{Material} {Brand} {Model}"
												description="{Weight}"
												info="{Price} {Currency}"
												type="Active"
											/>
										</items>
									</List>
								</IconTabFilter>

								<!-- INPUT LIST -->
								<IconTabFilter id="idInputListIconTabFilter" text="{i18n>inputList}">
									<List id="idProductsList" items="{/Products}">
										<items>
											<InputListItem id="idInputListItem" label="{Brand}">
												<Select id="idPropertiesSelect" items="{Properties}">
													<core:Item id="idTextSelectItem" key="{id}" text="{Text}"/>
												</Select>
											</InputListItem>
										</items>
									</List>
								</IconTabFilter>
								
								<!-- NOTIFICATION LIST -->
								<IconTabFilter id="idNotificationListIconTabFilter"  text="{i18n>notificationList}">
									<List id="idNewsList" items="{/News}">
										<items>
											<NotificationListItem id="idNotificationListItem"
												title="{Title}"
												description="{Description}"
												unread="{Unread}"
												authorName="{Author}"
												priority="{Priority}"
												showCloseButton="{ShowCloseButton}"
											/>
										</items>									
									</List>
								</IconTabFilter>
								
								<!-- Custom LIST -->
								<IconTabFilter id="idCustomListIconTabFilter"  text="{i18n>customList}">
									<List id="idNewsCustomList" items="{/News}">
										<items>
											<CustomListItem id="idCustomListItem">
												<layout:Grid id="idCustomListGrid">
													<Text id="idTitleText" text="{Title}"/>				
													<Text id="idAuthorText" text="{Author}"/>				
													<Text id="idDescriptionText" text="{Description}"/>							
												</layout:Grid>
											</CustomListItem>
										</items>										
									</List>
								</IconTabFilter>
							</items>
						</IconTabBar>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>

</mvc:View>