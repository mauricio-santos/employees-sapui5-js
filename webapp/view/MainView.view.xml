<mvc:View 
    controllerName="logaligroup.employees.controller.MainView"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
>
    <Shell id="idShell">
        <App id="app">
            <pages>
                <Page id="idTitlePage" title="{i18n>title}">
                    <content>
                        <HBox id="idInputHBox">
                            <Label id="idEmployeeLabel" class="sapUiSmallMargin" text="{i18n>labelEmployee}" labelFor="idEmployeeInput"/>
                            <Input id="idEmployeeIdInput" class="sapUiSmallMarginEnd sapUiTinyMarginTop" value="{countriesModel>/EmployeeId}" width="200px" maxLength="6"/>

                            <Label id="idCountryLabel" class="sapUiSmallMargin" text="{i18n>labelCountry}"/>
                            <Select id="idListCountrySelect" class="sapUiTinyMarginTop" selectedKey="{countriesModel>/CountryKey}" items="{countriesModel>/ListCountry}">
                                <items>
                                    <core:Item id="idTextItem" key="{countriesModel>Key}" text="{countriesModel>Text}"/>
                                </items>
                            </Select>

                            <Button id="idFilterButton" class="sapUiSmallMarginBegin sapUiTinyMarginTop" text="{i18n>LabelBtnFilter}" icon="sap-icon://search" press="onFilterButtonPress"/>
                            <Button id="idClearFilterButton" class="sapUiSmallMarginBegin sapUiTinyMarginTop" text="{i18n>LabelBtnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilterButtonPress"/>
                        </HBox>

                        <HBox id="idTableHBox">
                            <Panel id="idTablePanel">
                                <Button id="idShowCityButton" text="{i18n>btnShowCity}" visible="{configModel>/visibleBtnShowCity}" press="onShowCityButtonPress"/>
                                <Button id="idHideCityButton" text="{i18n>btnHideCity}" visible="{configModel>/visibleBtnHideCity}" press="onHideCityButtonPress"/>

                                <Table id="idEmployeesTable" items="{employeesModel>/Employees}">

                                    <!-- Colunas -->
                                    <columns>
                                        <!-- ID -->
                                        <Column id="idTableIDColumn" visible="{configModel>/visibleId}">
                                            <header>
                                                <Label id="idIDTableLabel" text="{i18n>labelId}"/>
                                            </header>
                                        </Column>

                                        <!-- Name -->
                                        <Column id="idTableNameColumn" visible="{configModel>/visibleName}">
                                            <header>
                                                <Label id="idNameTableLabel" text="{i18n>labelName}"/>
                                            </header>
                                        </Column>

                                        <!-- Country -->
                                        <Column id="idTableCountryColumn" visible="{configModel>/visibleCountry}">
                                            <header>
                                                <Label id="idCountryTableLabel" text="{i18n>labelCountry}"/>
                                            </header>
                                        </Column>

                                        <!-- City -->
                                        <Column id="idTableCityColumn" visible="{configModel>/visibleCity}">
                                            <header>
                                                <Label id="idCityTableLabel" text="{i18n>labelCity}"/>
                                            </header>
                                        </Column>
                                    </columns>

                                    <!-- Linhas -->
                                    <items>
                                        <ColumnListItem id="idColumnListItem" type="Active" press="showOrders">
                                            <cells>
                                                <!-- ID -->
                                                <Label id="idEmployeeIDItemLabel" text="{employeesModel>EmployeeID}"/>
                                                <!-- Name -->
                                                <Label id="idNameItemLabel" text="{employeesModel>FirstName} , {employeesModel>FirstName}"/>
                                                <!-- Country -->
                                                <Label id="idCountryItemLabel" text="{employeesModel>Country}"/>
                                                <!-- City -->
                                                <Label id="idCityItemLabel" text="{employeesModel>City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>

                                <!-- Tabela dinÃ¢mica de ordens -->
                                <HBox id="idOrdersHBox"/>
                            </Panel>
                        </HBox>

                    </content>
                </Page>            
            </pages>
        </App>
    </Shell>
</mvc:View>
