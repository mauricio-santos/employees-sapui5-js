<mvc:View 
    controllerName="logaligroup.employees.controller.MainView"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
>
    <Shell id="idShell">
        <App id="app">
            <pages>
                <Page id="idTitlePage" title="{i18n>title}">
                    <content>
                        <Label id="idEmployeeLabel" class="sapUiSmallMargin" text="{i18n>labelEmployee}" labelFor="idEmployeeInput"/>
                        <Input id="idEmployeeIdInput" class="sapUiSmallMarginEnd sapUiTinyMarginTop" value="{/employeeId}" width="200px" maxLength="6" liveChange="onEmployeeIdInputLiveChange"/>

                        <Label id="idCountryLabel" class="sapUiSmallMargin" text="{i18n>labelCountry}" visible="false"/>
                        <Select id="idListCountrySelect" visible="false" class="sapUiTinyMarginTop" selectedKey="{/countryKey}" items="{/listCountry}">
                            <items>
                                <core:Item id="idTextItem" key="{key}" text="{text}"/>
                            </items>
                        </Select>
                    </content>
                </Page>            
            </pages>
        </App>
    </Shell>
</mvc:View>
